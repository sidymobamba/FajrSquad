{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "FajrSquad.Infrastructure.Services": "Information"
    }
  },
  "AllowedHosts": "*",

  "DatabaseProvider": "postgres",
  "ConnectionStrings": {
    "DefaultConnection": "Host=your-db-host;Port=5432;Database=fajrsquad;Username=your-username;Password=your-password;"
  },

  "Alarm": {
    "FajrOffsetMinutes": 40
  },

  "Jwt": {
    "Secret": "your-super-long-secret-key-32-chars-or-more",
    "ExpirationMinutes": 10080,
    "RefreshTokenDays": 10080,
    "Issuer": "FajrSquad",
    "Audience": "FajrSquadUsers"
  },

  "Notifications": {
    "FCM": {
      "ProjectId": "your-firebase-project-id",
      "DefaultTtl": 7200,
      "HighPriorityTtl": 3600,
      "LowPriorityTtl": 14400
    },
    "Scheduling": {
      "MorningReminderOffsetMinutes": 30,
      "EveningReminderTime": "21:30",
      "FajrMissedCheckTime": "08:30",
      "EscalationTime": "11:30",
      "DailyHadithTime": "08:00",
      "DailyMotivationTime": "08:05",
      "EventReminderSweepMinutes": 15,
      "JobRunIntervalMinutes": 10
    },
    "BusinessRules": {
      "MaxConsecutiveMissedDays": 3,
      "HadithRepeatDays": 7,
      "MaxNotificationsPerDay": 10,
      "QuietHoursStart": "22:00",
      "QuietHoursEnd": "06:00"
    },
    "AdminUsers": [
      "admin-user-id-1",
      "admin-user-id-2"
    ]
  }
}
